{
  "name": "@oracle/bots-js-sdk",
  "version": "0.0.1",
  "description": "Oracle bot custom component service middleware and utilities",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "engines": {
    "node": ">=6.11.3",
    "npm": ">=3.10.10"
  },
  "config": {
    "outdir": "dist",
    "docdir": "docs"
  },
  "scripts": {
    "build": "npm run clean && npm run build:compile",
    "build:compile": "tsc",
    "build:watch": "tsc -w",
    "clean": "shx rm -rf $npm_package_config_outdir",
    "docs": "shx rm -rf ./docs && typedoc --options ./typedoc.js --exclude '**/*+(spec|schema|common)/**' --out $npm_package_config_docdir ./src/",
    "lint": "tslint .",
    "test": "istanbul cover ./src/spec/support/test.js",
    "prepare": "npm run lint && npm run build",
    "pretest": "npm run build",
    "posttest": "node ./src/spec/support/coverage.js"
  },
  "contributors": [
    "Matt Vander Vliet <matthew.vander.vliet@oracle.com>",
    "Adao Oliveira Junior <adao.junior@oracle.com>",
    "Henrick Yau <henrick.yau@oracle.com>"
  ],
  "license": "UPL-1.0",
  "files": [
    "dist",
    "!dist/spec/**",
    "!dist/**/*.map",
    "testing",
    "Dockerfile",
    ".dockerignore"
  ],
  "dependencies": {
    "body-parser": "^1.18.2",
    "joi": "^13.0.2",
    "leven": "^2.1.0",
    "request": "^2.81.0"
  },
  "devDependencies": {
    "@types/express": "^4.0.37",
    "@types/jasmine": "^2.5.54",
    "@types/joi": "^10.4.3",
    "@types/leven": "^2.1.1",
    "@types/log4js": "0.0.33",
    "@types/request": "^2.0.7",
    "@types/supertest": "^2.0.3",
    "express": "^4.15.4",
    "istanbul": "^0.4.5",
    "jasmine": "^2.8.0",
    "jasmine-reporters": "^2.2.1",
    "jasmine-spec-reporter": "^4.2.1",
    "log4js": "^2.3.4",
    "remap-istanbul": "^0.9.5",
    "shx": "^0.2.2",
    "supertest": "^3.0.0",
    "tslint": "^5.7.0",
    "typedoc": "^0.9.0",
    "typescript": "^2.5.2"
  },
  "peerDependencies": {
    "express": "^4.15.4"
  }
}

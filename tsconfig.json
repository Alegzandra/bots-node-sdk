{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "target": "es2015",
    "module": "commonjs",
    "lib": ["es2015", "es2017", "dom"],
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "./node_modules/@types/"
    ]
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}